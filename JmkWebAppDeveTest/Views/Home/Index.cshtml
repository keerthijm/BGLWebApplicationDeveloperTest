@model IEnumerable<JmkWebAppDeveTest.UserInfo>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>Search User</h2>
    @using (Html.BeginForm())
    {
        <p>
            Find by name: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>
    }



    <h2>Users:</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.avatar_url)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.avatar_url)
                </td>
       
            </tr>
        }

    </table>
    @if (Model.Any(i => i.repos != null))
    {
    <h2>Repository Details:</h2>
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Full Name
            </th>
            <th>
                Stargazers count
            </th>
        </tr>
        @foreach (var item in Model)
        {
            if (item.repos != null)
            {
                foreach (var repo in item.repos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => repo.id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => repo.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => repo.full_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => repo.stargazers_count)
                        </td>
                    </tr>
                }
            }
        }

    </table>

    }
</div>

<div class="row">
    <div class="col-md-4">
 
      
        @*<p>
          @Html.ActionLink("Users", "Index", "Users")
        </p>*@         
</div>